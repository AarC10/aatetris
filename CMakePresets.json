{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Configuration",
            "description": "Default build with standard options",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "TWOPLAYER": "ON",
                "NETWORK": "ON",
                "MENU": "ON",
                "BLOCKSTYLES": "ON"
            }
        },
        {
            "name": "curses",
            "displayName": "Curses Backend",
            "description": "Build with ncurses backend",
            "inherits": "default",
            "binaryDir": "${sourceDir}/build-curses",
            "cacheVariables": {
                "CURSES": "ON",
                "INPUT_SYS": "curses"
            }
        },
        {
            "name": "minimal",
            "displayName": "Minimal Build",
            "description": "Minimal build with no network or two-player support",
            "inherits": "default",
            "binaryDir": "${sourceDir}/build-minimal",
            "cacheVariables": {
                "TWOPLAYER": "OFF",
                "NETWORK": "OFF",
                "JOYSTICK": "OFF"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug Build",
            "description": "Debug build with symbols",
            "inherits": "default",
            "binaryDir": "${sourceDir}/build-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        },
        {
            "name": "curses",
            "configurePreset": "curses"
        },
        {
            "name": "minimal",
            "configurePreset": "minimal"
        },
        {
            "name": "debug",
            "configurePreset": "debug"
        }
    ]
}
